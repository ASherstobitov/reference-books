<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://outgoingDocumentBrowse.caption"
        focusComponent="outgoingDocumentsTable"
        messagesPack="com.company.referencebooks.web.screens.outgoingdocument">
    <data readOnly="true">
        <collection id="outgoingDocumentsDc"
                    class="com.company.referencebooks.entity.OutgoingDocument">
            <view extends="_local">
                <property name="typeDocument" view="_minimal"/>
                <property name="documents" view="_minimal">
                    <property name="size"/>
                </property>
                <property name="company" view="_minimal"/>
                <property name="executor" view="_minimal"/>
                <property name="signer" view="_minimal"/>
                <property name="author" view="_minimal">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="middleName"/>
                </property>
                <property name="logbook" view="_minimal">
                    <property name="code"/>
                    <property name="format"/>
                    <property name="amount"/>
                </property>
                <property name="nomenclatureCase" view="_minimal"/>
            </view>
            <loader id="outgoingDocumentsDl">
                <query>
                    <![CDATA[select e from referencebooks_OutgoingDocument e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="outgoingDocumentsTable"
            spacing="true">
        <filter id="filter"
                applyTo="outgoingDocumentsTable"
                dataLoader="outgoingDocumentsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="outgoingDocumentsTable"
                    width="100%"
                    dataContainer="outgoingDocumentsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="typeDocument"/>
                <column id="registrationNumber"/>
                <column id="registrationDate"/>
                <column id="company"/>
                <column id="recipient"/>
                <column id="topic"/>
                <column id="executor"/>
                <column id="signer"/>
                <column id="notes"/>
                <column id="name"/>
                <column id="author"/>
                <column id="creationDate"/>
                <column id="changingDate"/>
                <column id="condition"/>
                <column id="logbook"/>
                <column id="content"/>
                <column id="nomenclatureCase"/>
                <column id="sentWorkDate"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="outgoingDocumentsTable.create"/>
                <button id="editBtn" action="outgoingDocumentsTable.edit"/>
                <button id="removeBtn" action="outgoingDocumentsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
