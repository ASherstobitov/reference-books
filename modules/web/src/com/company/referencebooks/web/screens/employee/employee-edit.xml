<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employeeEdit.caption"
        focusComponent="form"
        messagesPack="com.company.referencebooks.web.screens.employee">
    <data>
        <instance id="employeeDc"
                  class="com.company.referencebooks.entity.Employee">
            <view extends="_local">
                <property name="outGoingDocuments" fetch="AUTO" view="_base">
                    <property name="company" view="_minimal"/>
                    <property name="signer" view="_minimal"/>
                    <property name="logbook" view="_minimal"/>
                    <property name="nomenclatureCase" view="_minimal"/>
                </property>
                <property name="user" view="_minimal"/>
                <property name="department" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="employeeDc">
            <column width="350px">
                <textField id="personnelNumberField" property="personnelNumber"/>
                <pickerField id="userField" property="user">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="lastNameField" property="lastName"/>
                <textField id="firstNameField" property="firstName"/>
                <textField id="middleNameField" property="middleName"/>
                <pickerField id="departmentField" property="department">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="emailField" property="email"/>
                <textField id="phoneNumberField" property="phoneNumber"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
