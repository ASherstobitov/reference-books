<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://employeeEdit.caption"
        focusComponent="form"
        messagesPack="com.company.referencebooks.web.screens.employee">
    <data>
        <instance id="employeeDc"
                  class="com.company.referencebooks.entity.Employee">
            <view extends="_local">
                <property name="user" view="_base">
                    <property name="firstName"/>
                    <property name="lastName"/>
                    <property name="middleName"/>
                </property>
            </view>
            <loader/>
            <instance id="userDc" property="user"/>
        </instance>
    </data>
    <dialogMode height="auto"
                width="auto"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="employeeDc">
            <column width="350px">
                <textField id="personnelNumberField" property="personnelNumber"/>
                <pickerField id="userField" property="user" align="TOP_LEFT">
                    <actions>
                        <action id="open_composition" type="picker_open_composition"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="lastNameField" property="lastName"/>
                <textField id="firstNameField" property="firstName"/>
                <textField id="middleNameField" property="middleName"/>
                <textField id="emailField" property="email"/>
                <textField id="phoneNumberField" property="phoneNumber"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
